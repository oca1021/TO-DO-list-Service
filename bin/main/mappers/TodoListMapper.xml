<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chaechae.todo.TodoListMapper">

	<insert id="insertTodo" parameterType="com.chaechae.todo.TodoItemDto">
		INSERT INTO TO_DO_ITEM (
			TITLE,    CONTENT,    START_DT,   COMPLETED,    REG_DT
	    	) 
	    VALUES (
	    	#{title}, #{content}, #{startDt}, #{completed}, #{regDt} 
			)
	</insert>

	<select id="getTodoList" resultType="com.chaechae.todo.TodoItemDto">
		SELECT * FROM TO_DO_ITEM
	</select>


	<delete id="deleteTodo" parameterType="com.chaechae.todo.TodoItemDto">
		DELETE FROM TO_DO_ITEM
		 WHERE SEQ = #{seq}
	</delete>


</mapper>